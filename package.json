{
  "name": "@nandenjin/md-site-conv",
  "version": "1.2.7",
  "description": "Markdown article -> json converter",
  "main": "lib/index.js",
  "bin": {
    "md-site-conv": "lib/index.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/nandenjin/md-site-conv.git",
  "author": "Kazumi Inada <hello@nandenjin.com>",
  "scripts": {
    "lint": "eslint --ext ts .",
    "lintfix": "eslint --fix --ext ts .",
    "format": "prettier --write **/*.{ts,js,json,md}",
    "prepublish": "npm run build",
    "build": "rollup -c",
    "release": "shipjs prepare",
    "pretest": "run-s clean build",
    "test": "jest",
    "clean": "rimraf dist lib"
  },
  "dependencies": {
    "chokidar": "^3.5.1",
    "consola": "^2.15.0",
    "markdown-it": "^12.0.4",
    "markdown-it-meta": "^0.0.1",
    "minimist": "^1.2.5",
    "rimraf": "^3.0.2",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-typescript": "^8.1.1",
    "@types/jest": "^26.0.20",
    "@types/markdown-it": "^12.0.1",
    "@types/minimist": "^1.2.1",
    "@types/node": "^14.14.22",
    "@types/rimraf": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^4.14.2",
    "@typescript-eslint/parser": "^4.14.2",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-jest": "^24.1.3",
    "husky": ">=4",
    "jest": "^26.6.3",
    "lint-staged": ">=10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.2.1",
    "rollup": "^2.38.4",
    "shipjs": "0.23.0",
    "ts-jest": "^26.5.0",
    "typescript": "^4.2.2"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,json,md}": "prettier --write"
  }
}
