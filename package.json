{
  "name": "@nandenjin/md-site-conv",
  "version": "1.2.3",
  "description": "Markdown article -> json converter",
  "main": "lib/index.js",
  "bin": {
    "md-site-conv": "lib/index.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/nandenjin/md-site-conv.git",
  "author": "Kazumi Inada <hello@nandenjin.com>",
  "scripts": {
    "lint": "eslint --ext ts .",
    "lintfix": "eslint --fix --ext ts .",
    "format": "prettier --write **/*.{ts,js,json,md}",
    "prepublish": "npm run build",
    "build": "rollup -c",
    "release": "shipjs prepare"
  },
  "dependencies": {
    "chokidar": "^3.4.3",
    "consola": "^2.9.0",
    "markdown-it": "^12.0.2",
    "markdown-it-meta": "^0.0.1",
    "minimist": "^1.2.3",
    "rimraf": "^3.0.0",
    "yaml": "^1.10.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^16.0.0",
    "@rollup/plugin-typescript": "^6.1.0",
    "@types/markdown-it": "^0.0.8",
    "@types/minimist": "^1.2.1",
    "@types/node": "^12.6.8",
    "@types/rimraf": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^7.13.0",
    "eslint-config-prettier": "^6.15.0",
    "husky": ">=4",
    "lint-staged": ">=10",
    "prettier": "^2.1.2",
    "rollup": "^2.33.1",
    "shipjs": "0.23.0",
    "typescript": "^4.0.5"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,json,md}": "prettier --write"
  }
}
