{
  "name": "@nandenjin/md-site-conv",
  "version": "1.2.25",
  "description": "Markdown article -> json converter",
  "main": "lib/index.js",
  "bin": {
    "md-site-conv": "lib/index.js"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": "https://github.com/nandenjin/md-site-conv.git",
  "author": "Kazumi Inada <hello@nandenjin.com>",
  "scripts": {
    "lint": "eslint --ext ts .",
    "lintfix": "eslint --fix --ext ts .",
    "format": "prettier --write **/*.{ts,js,json,md}",
    "prepublish": "npm run build",
    "build": "rollup -c",
    "release": "shipjs prepare",
    "pretest": "run-s clean build",
    "test": "jest",
    "clean": "rimraf dist lib"
  },
  "dependencies": {
    "chokidar": "^3.5.3",
    "consola": "^2.15.3",
    "markdown-it": "^13.0.1",
    "markdown-it-meta": "^0.0.1",
    "minimist": "^1.2.6",
    "rimraf": "^3.0.2",
    "yaml": "^2.1.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.1",
    "@rollup/plugin-typescript": "^8.3.4",
    "@types/jest": "^27.4.1",
    "@types/markdown-it": "^12.2.3",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.6.3",
    "@types/rimraf": "^3.0.2",
    "@typescript-eslint/eslint-plugin": "^4.33.0",
    "@typescript-eslint/parser": "^4.33.0",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.7.0",
    "husky": ">=8",
    "jest": "^26.6.3",
    "lint-staged": ">=13",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.7.1",
    "rollup": "^2.77.2",
    "shipjs": "0.24.4",
    "ts-jest": "^26.5.6",
    "typescript": "^4.7.4"
  },
  "license": "MIT",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,js}": "eslint --cache --fix",
    "*.{ts,js,json,md}": "prettier --write"
  }
}
